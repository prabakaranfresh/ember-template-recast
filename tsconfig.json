{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "noImplicitAny": true,
    "baseUrl": ".",
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks":false,
    "strictPropertyInitialization": false,

    "paths": {
      "*": ["types/*"]
    }
  }
}
